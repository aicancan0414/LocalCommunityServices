<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/writeFeedbackLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/write_feedback" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/writeFeedback"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/writeFeedbackLabel" />

    <TextView
        android:id="@+id/pastOpsLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/writeFeedback"
        android:text="@string/past_ops" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/pastOps"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/pastOpsLabel" />
</RelativeLayout>
